<div class="container household-start-game" data-household-id="<%= @household.id %>"  data-current-user-id="<%= current_user.id %>">
  <div class="row">
    <div class="col-12">
    <!--   if its my turn  -->


    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% if @user_playing_household.user == current_user %>
          <h1>It's your turn!</h1>
        <div class="carousel-item active">
          <!-- <img class="d-block w-100" src="https://res.cloudinary.com/djnfnwxgu/image/upload/v1599561280/deveto/original_nkgfa8.png" alt="First slide"> -->
          <%= link_to random_pick_household_path(@household, pick: "danny") do %>
            <%= image_tag("https://res.cloudinary.com/djnfnwxgu/image/upload/v1599561280/deveto/original_nkgfa8.png", :alt => "rss feed", :class => "danny d-block w-70" ) %>
        <% end %>
        <h1>WATCH SOMETHING ‘GOOD’</h1>
        </div>

        <div class="carousel-item">
         <!--  <img class="d-block w-100" src="..." alt="Second slide"> -->
          <%= link_to random_pick_household_path(@household, pick: "evil") do %>
            <%= image_tag("https://res.cloudinary.com/djnfnwxgu/image/upload/v1599217974/deveto/Artboard_3_1_ziycf3.png", :alt => "rss feed", :class => "danny d-block w-70") %>
        <% end %>
        <h1>FEELING LIKE SOMETHING‘TERRIBLE’? CHOOSE EVIL</h1>
        </div>

        <div class="carousel-item">
          <!-- <img class="d-block w-100" src="..." alt="Third slide"> -->
          <%= link_to random_pick_household_path(@household, pick: "krazy") do %>
            <%= image_tag("https://res.cloudinary.com/djnfnwxgu/image/upload/v1599217974/deveto/comedy-horror_uvi5mb.png", :alt => "rss feed", :class => "danny d-block w-70") %>
          <% end %>
          <h1>ARE YOU NUTS? GO KRAZY! NO VETOS HERE</h1>
        </div>
    </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

      <% else %>
         <!-- User 2 waiting for random pick-->
        <div id="waiting-user-2">
          <h1>IT’S <%= @user_playing_household.user.name %>’S TURN! WAIT HERE...</h1>
        </div>
        <div id="playing-user-2" class="d-none">
          <div id="movie-name">
            <h1>Movie Name</h1>
          </div>

         <!--  updated to vetos_remaining  -->
          <% if @user_veto.vetos_remaining && @user_veto.vetos_remaining > 0  %>
            <p>You have veto powers</p>
            <%= link_to veto_household_path(@household) do %>
              <%= image_tag "veto.png" %>
            <% end %>
          <% else %>
            <p>You have no Veto powers</p>
          <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>

